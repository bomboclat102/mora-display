---
import Button from './Button.astro';
---

<section class="hero">
    <video autoplay muted loop playsinline>
        <source src="/hero.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    
    <div class="hero-content">
        <h1>
            EXHIBITION STAND<br>
            DESIGN & BUILD
        </h1>
        <Button href="#projects">View My Projects</Button>
    </div>
</section>

<style>
    .hero {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .hero-content {
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-6);
        text-align: center;
        color: var(--color-white);
    }

    video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
