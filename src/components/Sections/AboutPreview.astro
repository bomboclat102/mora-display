---
import SectionHeader from "../SectionHeader.astro";
import YearCard from "../YearCard.astro";
import Button from "../Button.astro";
---

<section class="about-preview" id="about">
    <div class="container">
        <SectionHeader
            title="Our Story"
            subtitle="A journey of innovation, growth, and excellence in exhibition design spanning over a decade."
        />
        
        <div class="years-grid">
            <YearCard 
                year="2010"
                title="The Beginning"
                description="Founded in London with a vision to revolutionize exhibition stand design. Started with a small team of 3 passionate designers."
                highlight="First major project completed"
            />
            
            <YearCard 
                year="2016"
                title="International Expansion"
                description="Opened our second office in Berlin and began serving clients across Europe. Launched our sustainable design initiative."
                highlight="Carbon-neutral certification"
            />
            
            <YearCard 
                year="2024"
                title="Future Forward"
                description="Today, we're a team of 50+ specialists serving clients globally. Leading with AI-powered design tools and sustainable solutions."
                highlight="50+ team members worldwide"
            />
        </div>
        
        <div class="cta-section">
            <Button href="/about">Discover Our Full Journey</Button>
        </div>
    </div>
</section>

<style>
    .about-preview {
        background: 
            radial-gradient(circle at 20% 80%, rgba(255, 193, 7, 0.06) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(76, 175, 80, 0.08) 0%, transparent 50%),
            var(--color-black);
        position: relative;
        overflow: hidden;
    }
    
    .about-preview::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            linear-gradient(135deg, 
                rgba(66, 165, 245, 0.02) 0%,
                transparent 25%,
                rgba(129, 99, 255, 0.02) 50%,
                transparent 75%,
                rgba(255, 64, 129, 0.02) 100%
            );
        animation: backgroundShift 20s ease-in-out infinite;
    }
    
    @keyframes backgroundShift {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }
    
    .years-grid {
        display: grid;
        gap: var(--spacing-8);
        grid-template-columns: 1fr;
        margin-bottom: var(--spacing-12);
    }
    
    .cta-section {
        text-align: center;
    }
    
    @media (min-width: 48rem) {
        .years-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (min-width: 64rem) {
        .years-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
