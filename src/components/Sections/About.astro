---
import SectionHeader from "../SectionHeader.astro";
import YearCard from "../YearCard.astro";
import Button from "../Button.astro";
---

<section class="about" id="about">
    <div class="container">
        <SectionHeader
            title="Our History"
            subtitle="A decade-long pursuit of creative and high-quality exhibition design solutions."
        />
        
        <div class="years-grid">
            <YearCard 
                year="2005"
                title="The Beginning"
                description="In this year, we initiated our journey with a foundational project in Italy: Established MORADISPLAY in Milano"
                highlight="Foundation of MORADISPLAY in Milano"
            />
            
            <YearCard 
                year="2008"
                title="First Exhibitions"
                description="This year included several interior design and construction projects in Milan, such as branch design and construction for Hyosung, Hyundai, and KOSHI KOBAN, as well as office furniture design and installation for Korean Air Line."
                highlight="First Major Projects"
            />
            
            <YearCard 
                year="2009"
                title="International expansion"
                description="This year, we expanded our involvement in international exhibitions through the design and construction of display booths at events such as MIDO, MadeF, Salone del Mobile, Enersol in Milan; SILMO in Paris; LuxePack in Monaco; Cosmopack.prof. in Bologna; and MEDICA in DÃ¼sseldorf."
                highlight="International Exhibition projects"
            />
        </div>
        
        <div class="cta-section">
            <Button href="/mora-display/about">Discover Our Full Journey</Button>
        </div>
    </div>
</section>

<style>
    .about {
        background: 
            radial-gradient(circle at 20% 80%, rgba(255, 193, 7, 0.06) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(76, 175, 80, 0.08) 0%, transparent 50%),
            var(--color-black);
    }
    
    .container {
        max-width: 1400px;
        margin: 0 auto;
    }
    
    .years-grid {
        display: grid;
        gap: var(--spacing-8);
        grid-template-columns: 1fr;
        margin-bottom: var(--spacing-12);
    }
    
    .cta-section {
        text-align: center;
    }
    
    @media (min-width: 48rem) {
        .years-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (min-width: 64rem) {
        .years-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
