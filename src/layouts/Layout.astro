---
import Header from "../components/Header.astro"

import '@fontsource-variable/inter';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mora Display</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root {
        --header-height: 70px;

		--font-family: 'Inter Variable', sans-serif;

		/* Font Sizes - Mobile First */
        --font-size-xs: 0.75rem;    /* 12px */
        --font-size-sm: 0.875rem;   /* 14px */
        --font-size-base: 1rem;     /* 16px */
        --font-size-lg: 1.125rem;   /* 18px */
        --font-size-xl: 1.25rem;    /* 20px */
        --font-size-2xl: 1.5rem;    /* 24px */
        --font-size-3xl: 1.875rem;  /* 30px */
        --font-size-4xl: 2.25rem;   /* 36px */
        --font-size-5xl: 3rem;      /* 48px */
        --font-size-6xl: 3.75rem;   /* 60px */

        /* Font Weights */
        --font-weight-light: 300;
        --font-weight-normal: 400;
        --font-weight-medium: 500;
        --font-weight-semibold: 600;
        --font-weight-bold: 700;
        --font-weight-extrabold: 800;

        /* Line Heights */
        --line-height-tight: 1.25;
        --line-height-normal: 1.5;
        --line-height-relaxed: 1.625;
        --line-height-loose: 2;

		/* Spacing - Mobile First */
        --spacing-1: 0.25rem;   /* 4px */
        --spacing-2: 0.5rem;    /* 8px */
        --spacing-3: 0.75rem;   /* 12px */
        --spacing-4: 1rem;      /* 16px */
        --spacing-5: 1.25rem;   /* 20px */
        --spacing-6: 1.5rem;    /* 24px */
        --spacing-8: 2rem;      /* 32px */
        --spacing-10: 2.5rem;   /* 40px */
        --spacing-12: 3rem;     /* 48px */
        --spacing-16: 4rem;     /* 64px */
        --spacing-20: 5rem;     /* 80px */
        --spacing-24: 6rem;     /* 96px */
        --spacing-32: 8rem;     /* 128px */

		/* Border Radius */
        --radius-sm: 0.125rem;   /* 2px */
        --radius-base: 0.25rem;  /* 4px */
        --radius-md: 0.375rem;   /* 6px */
        --radius-lg: 0.5rem;     /* 8px */
        --radius-xl: 0.75rem;    /* 12px */
        --radius-2xl: 1rem;      /* 16px */
        --radius-full: 9999px;

		/* Colors */
		--color-white: #ffffff;
		--color-black: #000000;
        --color-accent: #eb6012;
        --color-accent-rgb: 235, 96, 18;
	}

    /* Tablet Breakpoint - 768px and up */
    @media (min-width: 48rem) {
        :root {
            --header-height: 80px;

            /* Font Sizes - Tablet */
            --font-size-xs: 0.8125rem;  /* 13px */
            --font-size-sm: 0.9375rem;  /* 15px */
            --font-size-base: 1.125rem; /* 18px */
            --font-size-lg: 1.25rem;    /* 20px */
            --font-size-xl: 1.375rem;   /* 22px */
            --font-size-2xl: 1.75rem;   /* 28px */
            --font-size-3xl: 2.25rem;   /* 36px */
            --font-size-4xl: 2.75rem;   /* 44px */
            --font-size-5xl: 3.5rem;    /* 56px */
            --font-size-6xl: 4.5rem;    /* 72px */

            /* Spacing - Tablet */
            --spacing-1: 0.3125rem;  /* 5px */
            --spacing-2: 0.625rem;   /* 10px */
            --spacing-3: 0.9375rem;  /* 15px */
            --spacing-4: 1.25rem;    /* 20px */
            --spacing-5: 1.5625rem;  /* 25px */
            --spacing-6: 1.875rem;   /* 30px */
            --spacing-8: 2.5rem;     /* 40px */
            --spacing-10: 3.125rem;  /* 50px */
            --spacing-12: 3.75rem;   /* 60px */
            --spacing-16: 5rem;      /* 80px */
            --spacing-20: 6.25rem;   /* 100px */
            --spacing-24: 7.5rem;    /* 120px */
            --spacing-32: 10rem;     /* 160px */
        }
    }

    /* Desktop Breakpoint - 1024px and up */
    @media (min-width: 64rem) {
        :root {
            --header-height: 90px;

            /* Font Sizes - Desktop */
            --font-size-xs: 0.875rem;   /* 14px */
            --font-size-sm: 1rem;       /* 16px */
            --font-size-base: 1.25rem;  /* 20px */
            --font-size-lg: 1.375rem;   /* 22px */
            --font-size-xl: 1.5rem;     /* 24px */
            --font-size-2xl: 2rem;      /* 32px */
            --font-size-3xl: 2.5rem;    /* 40px */
            --font-size-4xl: 3rem;      /* 48px */
            --font-size-5xl: 4rem;      /* 64px */
            --font-size-6xl: 5rem;      /* 80px */

            /* Spacing - Desktop */
            --spacing-1: 0.375rem;   /* 6px */
            --spacing-2: 0.75rem;    /* 12px */
            --spacing-3: 1.125rem;   /* 18px */
            --spacing-4: 1.5rem;     /* 24px */
            --spacing-5: 1.875rem;   /* 30px */
            --spacing-6: 2.25rem;    /* 36px */
            --spacing-8: 3rem;       /* 48px */
            --spacing-10: 3.75rem;   /* 60px */
            --spacing-12: 4.5rem;    /* 72px */
            --spacing-16: 6rem;      /* 96px */
            --spacing-20: 7.5rem;    /* 120px */
            --spacing-24: 9rem;      /* 144px */
            --spacing-32: 12rem;     /* 192px */
        }
    }

	* {
		box-sizing: border-box;
	}

	html,
	body {
        scroll-behavior: smooth;
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: var(--font-family);
        background: var(--color-black);
	}

    h1, h2, h3, h4, h5, h6, p, a {
        margin: 0;
        padding: 0;
        line-height: var(--line-height-normal);
        color: var(--color-white);
        font-size: var(--font-size-base);
    }

    h1 {
        font-size: var(--font-size-4xl);
    }
</style>
